<div class="container d-flex">

  <div class="jumbotron">
    <h1 class="display-4"><%= @task.title %></h1>
    <p class="lead"><%= @task.details %></p>
    <hr class="my-4">
    <a class="btn btn-primary btn-lg" role="button"<%= link_to "Tasks List", tasks_path %></a>

  </div>

  <div class="jumbotron">
    <h1 class="display-4">Edit :</h1>
    <p class="lead">Update entries</p>
    <hr class="my-4">

    <%= form_for(@task) do |f| %>


    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>
    <%= f.submit class: 'btn btn-warning' %>
  <% end %>
  </div>


</div>


